<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent">
    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/btnCivicWebLogin" android:text="@string/Menu_CivicWebLogin"
            android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:layout_weight="1" android:background="@drawable/blue_button" />
        <Button android:id="@+id/btnCivicGetRecords" android:text="@string/Menu_GetRecords"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:layout_weight="1" android:background="@drawable/blue_button" />
        <Button android:id="@+id/btnCivicCreateRecord" android:text="@string/Menu_CreateRecord"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:layout_weight="1" android:background="@drawable/blue_button" />
        <Button android:id="@+id/btnCivicSearchRecord" android:text="@string/Menu_SearchRecord"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:layout_weight="1" android:background="@drawable/blue_button" />
        <Button android:id="@+id/btnCivicLogout" android:text="@string/Menu_Logout"
            android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:layout_weight="1" android:background="@drawable/blue_button" />
        <Button android:id="@+id/btnCivicBack" android:text="@string/Menu_Back"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:background="@drawable/blue_button" />
    </LinearLayout>
</ScrollView>
